{
  "info": {
    "_postman_id": "12345678-1234-1234-1234-123456789abc",
    "name": "Spy Cat Agency API",
    "description": "Complete API for managing spy cats, missions, and targets for the Spy Cat Agency",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345678"
  },
  "item": [
    {
      "name": "Cats",
      "item": [
        {
          "name": "Create Cat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Agent Whiskers\",\n    \"years_experience\": 5,\n    \"breed\": \"Siamese\",\n    \"salary\": 50000.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cats/",
              "host": ["{{baseUrl}}"],
              "path": ["cats", ""]
            },
            "description": "Create a new spy cat. The breed will be validated against TheCatAPI."
          }
        },
        {
          "name": "List All Cats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cats/",
              "host": ["{{baseUrl}}"],
              "path": ["cats", ""]
            },
            "description": "Get a list of all spy cats in the system."
          }
        },
        {
          "name": "Get Cat by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cats/{{catId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cats", "{{catId}}"]
            },
            "description": "Get a specific spy cat by its ID."
          }
        },
        {
          "name": "Update Cat Salary",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"salary\": 55000.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cats/{{catId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cats", "{{catId}}"]
            },
            "description": "Update a spy cat's salary."
          }
        },
        {
          "name": "Delete Cat",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cats/{{catId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cats", "{{catId}}"]
            },
            "description": "Delete a spy cat from the system."
          }
        }
      ],
      "description": "API endpoints for managing spy cats in the Spy Cat Agency system."
    },
    {
      "name": "Missions",
      "item": [
        {
          "name": "Create Mission",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"targets\": [\n        {\n            \"name\": \"Dr. Evil\",\n            \"country\": \"Germany\",\n            \"notes\": \"Master criminal planning world domination\"\n        },\n        {\n            \"name\": \"The Professor\",\n            \"country\": \"Spain\",\n            \"notes\": \"Genius hacker, very dangerous\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/missions/",
              "host": ["{{baseUrl}}"],
              "path": ["missions", ""]
            },
            "description": "Create a new mission with 1-3 targets in a single request."
          }
        },
        {
          "name": "List All Missions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/missions/",
              "host": ["{{baseUrl}}"],
              "path": ["missions", ""]
            },
            "description": "Get a list of all missions with their targets and assigned cats."
          }
        },
        {
          "name": "Get Mission by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/missions/{{missionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["missions", "{{missionId}}"]
            },
            "description": "Get a specific mission by its ID with targets and assigned cat."
          }
        },
        {
          "name": "Assign Cat to Mission",
          "request": {
            "method": "PUT",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/missions/{{missionId}}/assign/{{catId}}",
              "host": ["{{baseUrl}}"],
              "path": ["missions", "{{missionId}}", "assign", "{{catId}}"]
            },
            "description": "Assign a cat to a mission. One cat can only have one active mission."
          }
        },
        {
          "name": "Delete Mission",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/missions/{{missionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["missions", "{{missionId}}"]
            },
            "description": "Delete a mission. Cannot delete if mission is assigned to a cat."
          }
        }
      ],
      "description": "API endpoints for managing missions and their targets."
    },
    {
      "name": "Targets",
      "item": [
        {
          "name": "Update Target Notes",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"notes\": \"Updated intelligence: Target has increased security measures\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/targets/{{targetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["targets", "{{targetId}}"]
            },
            "description": "Update target notes. Notes cannot be updated if target or mission is completed."
          }
        },
        {
          "name": "Mark Target as Complete",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"complete\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/targets/{{targetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["targets", "{{targetId}}"]
            },
            "description": "Mark a target as completed. If all targets in a mission are completed, the mission will be automatically marked as completed."
          }
        },
        {
          "name": "Update Notes and Complete",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"notes\": \"Final report: Mission accomplished successfully\",\n    \"complete\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/targets/{{targetId}}",
              "host": ["{{baseUrl}}"],
              "path": ["targets", "{{targetId}}"]
            },
            "description": "Update both target notes and completion status in a single request."
          }
        }
      ],
      "description": "API endpoints for updating mission targets (notes and completion status)."
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
}
